<h2><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<p><%= link_to "Edit task", "/tasks/#{@task.id}/edit" =%></p>
<p><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
<p><%= link_to "Back to Index", "/tasks" =%></p>
